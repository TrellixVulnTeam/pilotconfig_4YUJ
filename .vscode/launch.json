    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Setup",
            "type": "python",
            "request": "launch",
            "module": "pilot.pilot",
            "args": [
                //"fw", "build", "--workdir", "~/work/rust/stm32test", "pidev"
                //"fw", "update", "--workdir", "~/work/rust/stm32test_", "devpi"
                //"fw", "program", "--workdir", "~/work/rust/stm32test"
                //"fw", "init", "--host", "192.168.1.60", "--workdir", "/tmp/test"
                //"setup", "--host", "192.168.101.76", "--user", "mendel", "--password", "mendel"
                "setup", "--host", "192.168.1.26", "--node"
                //"fw", "program", "--workdir", "~/work/phoinix/newfw2/", "--host", "192.168.1.38"
                //"fw", "init", "--workdir", "/tmp/tempfw", "--host", "192.168.101.63"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "192.168.101.69",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",  // You may also manually specify the directory containing your source code.
                    "remoteRoot": "/usr/local/lib/python3.5/dist-packages" // Linux example; adjust as necessary for your OS and situation.
                }
            ],  
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}